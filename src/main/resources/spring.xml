<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="triangle" class="spring.core.iTransform.Triangle" >
        <property name="pointA" ref="Point1" />
        <property name="pointB" ref="Point2" />
        <property name="pointC" ref="Point3" />
    </bean>

    <bean id="Point1" class="spring.core.iTransform.Point" >
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="Point2" class="spring.core.iTransform.Point" >
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="Point3" class="spring.core.iTransform.Point" >
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>

</beans>